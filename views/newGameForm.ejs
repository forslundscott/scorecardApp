<form id="newGameForm" action="/games/addGame" method="post" class="textCenter">
                
    <select name="seasonId" id="seasonId" class="primaryStyle" style="font-size: 100%;" autocomplete="off" onchange="getLeagues(this.form)" required>
        <% for(let i=0; i< data.seasons.length; i++) {%>
            <option value="<%= data.seasons[i].seasonId%>" <%= data.seasons[i].seasonId== data.season.seasonId? 'selected' : ''%>><%= data.seasons[i].seasonName%></option>
        <% } %>

    </select>
    <select name="leagueId" class="primaryStyle" style="font-size: 100%;" autocomplete="off" onchange="getTeams(this.form)" required>
        <option value="" disabled selected>League</option>
        <% for(let i=0; i< data.leagues.length; i++) {%>
            <option value="<%= data.leagues[i].leagueId%>"><%= data.leagues[i].leagueShortName%></option>
        <% } %>
    </select>
    <br>
    <br>
    <select name="team1Id" class="primaryStyle" style="font-size: 100%;" required>
        <option value="" disabled selected>Team 1</option>
    </select>
    
    <select name="team2Id" class="primaryStyle" style="font-size: 100%;" required>
        <option value="" disabled selected>Team 2</option>
    </select>
    <br>
    <br>
    <div class="primaryStyle" style="font-size: 100%;">
        Date:
        <br>
        <input type="date" name="startDate" class="primaryStyle" style="font-size: 100%;" value="<%= new Date().toISOString().split('T')[0] %>" required>
    </div>
    <br>
    <div class="primaryStyle" style="font-size: 100%;">
        Time:
        <br>

        <input type="time" name="startTime" class="primaryStyle" style="font-size: 100%;" value="19:00" required>

        
    </div>
    <br>
    <div class="primaryStyle" style="font-size: 100%;">
        Field:
        <br>
        <select name="court" class="primaryStyle" style="font-size: 100%;" autocomplete="off" required>
            <!-- <option value="" disabled selected hidden>Season</option> -->
            <option value="1C" >1C</option>
            <option value="1D" >1D</option>
            <option value="2A" selected>2A</option>
            <option value="2B" >2B</option>
            <option value="3A" >3A</option>
            <option value="3B" >3B</option>
            <option value="6A" >6A</option>
            <option value="SG1" >SG1</option>
            <option value="SG2" >SG2</option>
            <option value="SG3" >SG3</option>
            <option value="SG4" >SG4</option>
            <!-- <option value="Indoor">Indoor</option> -->
        </select>
    </div>
    <br>
    <!-- <br> -->
    <div class="primaryStyle" style="font-size: 100%;">
        Number of Periods:
        <br>
        <input type="number" name="maxPeriods" class="primaryStyle" style="font-size: 100%;" value="2" min="2" max="4">
    </div>
    <br>
    <br>
    <br>
    <button type="submit" class="itemFormat primaryStyle" style="font-size: 150%;">Add Game</button>
</form>