<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">


    <title>My Teams</title>
    <style>
        body {
            font-family: sans-serif;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 10px;
            text-align: center;
        }
        th {
            background-color: rgba(206, 255, 0, 0.50);
        }
        .date-header {
            background-color: #ceff00;
            color: #121212;
            font-size: 1.2em;
            padding: 10px;
            text-align: left;
            border-radius: 5px;
            border-style: solid;
            border-width: thin;
        }
        .tooltip {
            position: relative;
            cursor: pointer;
        }

        .tooltip::after {
            content: attr(data-tooltip);
            position: absolute;
            bottom: 100%;
            left: 50%;
            transform: translateX(-50%);
            background-color: #ceff00;
            color: #121212;
            padding: 5px;
            border-radius: 5px;
            opacity: 0;
            visibility: hidden;
            pointer-events: none;
            transition: opacity 0.3s;
            white-space: nowrap;
            border-style: solid;
            border-width: thin;
        }

        .tooltip:hover::after,
        .tooltip:focus::after {
            opacity: 1;
            visibility: visible;
        }

        .tooltip:focus::after {
            visibility: visible;
        }
        input:focus, textarea:focus, select:focus {
            outline: 2px solid #ceff00; /* Change to your preferred color */
        }
        ::selection {
            background: #ceff00; 
            color: #121212; 
        }
        .blur-text {
            filter: blur(4px);
            user-select: none; /* Prevents text selection */
            pointer-events: none; /* Prevents interaction */
        }
    </style>
</head>
<body>
    <br>
    <% console.log(data.user) %>
    <% data.teams.forEach((team, index) => { %>
        <div class="date-header"> <%= team.teamFullName %> - <%= team.leagueShortName %> - <%= team.seasonName %></div>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <% if (data.user.id == team.captainId) { %>
                        <th>Gender</th>
                        <th>Shirt</th>
                    <% } %>
                    
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <%# console.log(data.user.ID) %>
                <%# console.log(team) %>
                <% team.roster.forEach(player => { %>
                    <tr>
                        <td><%= player.firstName %> <%= player.lastName %></td>
                        <% if (data.user.id == team.captainId) { %>
                            <td><%= player.gender %></td>
                            <td><%= player.shirtSize %></td>
                        <% } %>
                        <%# console.log(data.user.ID) %>
                        
                        <td><% if (data.user.id == team.captainId && player.status == 'Registered') { %>
                            
                            <!-- <i class="bi bi-check-circle-fill" style="color: green; font-size: 4vh;"></i>
                            <i class="bi bi-x-circle-fill" style="color: red; font-size: 4vh;"></i> -->

                            <% } else { %>
                                <%= 
                            player.userId == team.captainId && player.userId == team.keeperId
                                ? 'Captain, Keeper'
                                : player.userId == team.captainId
                                ? 'Captain'
                                : player.userId == team.keeperId
                                ? 'Keeper'
                                : ''
                                
                            %>
                            <% } %>
                            
                            </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% }) %>
        
</body>
</html>
