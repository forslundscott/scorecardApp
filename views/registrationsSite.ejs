<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>League Standings</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 10px;
            text-align: center;
        }
        th {
            background-color: #f4f4f4;
        }
        .tooltip {
  position: relative;
  cursor: pointer;
}

.tooltip::after {
  content: attr(data-tooltip);
  position: absolute;
  bottom: 100%;
  left: 50%;
  transform: translateX(-50%);
  background-color: #333;
  color: #fff;
  padding: 5px;
  border-radius: 5px;
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  transition: opacity 0.3s;
  white-space: nowrap;
}

.tooltip:hover::after,
.tooltip:focus::after {
  opacity: 1;
  visibility: visible;
}

.tooltip:focus::after {
  visibility: visible;
}

    </style>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th class="tooltip" data-tooltip="Full Name">Name</th>
                <!-- <th class="tooltip" data-tooltip="Last Name">Last Name</th> -->
                <th class="tooltip" data-tooltip="League Name">League</th>
                <th class="tooltip" data-tooltip="First Name">Team</th>
            </tr>
        </thead>
        <tbody>
            <% data.leaguesAlreadyRegistered.forEach(item => { %>
                <tr>
                    <td><%= item.lastName %>, <%= item.firstName %></td>

                    <td>
                        <select name="" id="" onchange="leagueChange(this)">
                            <%  data.leagues.forEach(league => {%>
                                
                            <option value="<%= league.leagueId %>" <%= league.leagueId === item.leagueId ? 'selected' : '' %> ><%= league.shortName%></option>
                            <% }) %>
                        </select>
                        </td>
                    <td>
                        <select name="" id="">
                            <option value="">
                                <%= item.teamShortName %>
                            </option>
                        </select></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <script>
        function leagueChange(ele){
            let td = ele.closest("td"); // Get the closest <td>
            let tr = td.closest("tr"); // Get the parent <tr>
            let table = tr.closest("table"); // Get the table element
            let thead = table.querySelector("thead"); // Find the <thead>
            
            let columnIndex = Array.from(tr.children).indexOf(td); // Get the index of the <td> in the row
            let th = thead.querySelectorAll("th")[columnIndex]; // Get the corresponding <th>
        }
    </script>
</body>
</html>
