<meta name="viewport" content="maximum-scale=1">
<link rel="stylesheet" href="/styles.css">
<div id="formBackground" style="touch-action: '';"></div>

<form id="newPlayerForm" class="popupForm primaryStyle primaryBorder" action="" method="post" style="text-align: center; ">
        <div class="playerName" style="font-size: 350%; margin-top: 1vh; margin-bottom: 1vh;">
            Password Reset
        </div>
        <br>
        <div class="textCenter" style="height: 15vh;"><img src="https://glad-pika-totally.ngrok-free.app/GLOSLogo.png" alt="GLOS Logo" id="mainLogo"></div>
        <br>
        <% if (messages.error) { %>
            <%= messages.error %>
        <% } %>
        <br>
        <input type="password" name="password" value="" placeholder="New Password" style="margin-bottom: .75vh; font-size: 250%;" required>
        <br>
        <input type="password" name="confirmPassword" value="" placeholder="Re-Enter Password" style="margin-bottom: .75vh; font-size: 250%;" required>
        <br>
        <button type="submit" class="primaryStyle primaryBorder" style="margin-bottom: 1.25vh; font-size: 250%;">Submit</button>
</form>