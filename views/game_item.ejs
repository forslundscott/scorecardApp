</head>
<body>
        <form class="" action="/games/activeGame/<%= game.Event_ID %>" method="get">
            <!-- <input type="hidden" name="Team1_ID" value="<%# game.Team1_ID %>">
            <input type="hidden" name="Team2_ID" value="<%# game.Team2_ID %>"> -->
            <!-- <input type="hidden" name="Event_ID" value="<%# game.Event_ID %>"> -->
            <!-- <input type="hidden" name="season" value="<%# game.season %>"> -->
            <!-- <input type="hidden" name="subseason" value="<%# game.subseason %>"> -->
            <!-- <input type="hidden" name="realTime" value="">
            <input type="hidden" name="periodTime" value="">
            <input type="hidden" name="period" value="">
            <input type="hidden" name="value" value=""> -->
            <button class="playerButton" onclick="">
        <div class="itemFormat primaryStyle" style="border-style:solid; border-width: thick; border-color: <%-game.LeagueColor%>; background-image: linear-gradient(90deg, <%=game.Team1Color %> 2.5%, black 12.5%, black 87.5%, <%=game.Team2Color %> 97.5%);">
            <div class="playerTag">
                <div class="playerName" style="text-align: center;">
                    <%= game.team1abbreviation %>
                    vs
                    <%= game.team2abbreviation %>
                </div>
            </div>
            <div class="statContainer">  
                <%const tempDate = new Date()
                tempDate.setTime(game.startUnixTime) %>
                <div class="gameInfo"><%= game.Location %></div>
                <div class="gameInfo"><%= tempDate.toLocaleString('en-US', {
                    timeZone: 'America/New_York', // Setting timezone to EST
                    hour: 'numeric',
                    minute: '2-digit'
                  }) %></div>
                <div class="gameInfo"><%= tempDate.toLocaleString('en-US', {
                    timeZone: 'America/New_York', // Setting timezone to EST
                    month: '2-digit',
                    day: '2-digit'
                  }) %></div>
            </div> 
            <div class="playerTag">
                <div class="playerName" style="text-align: center;">
                    SK: <%= game.scoreKeeper == null ? 'TBD' : game.scoreKeeper %>
                </div>
            </div>   
           
            <% if (game.monitor) { %>
                <div class="playerTag">
                    <div class="playerName" style="text-align: center;">
                        Mon: <%= game.monitor == null ? 'TBD' : game.monitor %>
                    </div>
                </div> 
            <% } %>       
            <% if (game.referee1) { %>         
            <div class="playerTag">
                <div class="playerName" style="text-align: center;">
                    Ref 1: <%= game.referee1 == null ? 'TBD' : game.referee1 %>
                </div>
            </div> 
            <% } %> 
            <% if (game.referee2) { %> 
            <div class="playerTag">
                <div class="playerName" style="text-align: center;">
                    Ref 2: <%= game.referee2 == null ? 'TBD' : game.referee2 %>
                </div>
            </div> 
            <% } %> 
        </div>
        </button>
    </form>
</body>
</html>