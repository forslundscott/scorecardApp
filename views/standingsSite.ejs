<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>League Standings</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 10px;
            text-align: center;
        }
        th {
            background-color: #f4f4f4;
        }
        .tooltip {
  position: relative;
  cursor: pointer;
}

.tooltip::after {
  content: attr(data-tooltip);
  position: absolute;
  bottom: 100%;
  left: 50%;
  transform: translateX(-50%);
  background-color: #333;
  color: #fff;
  padding: 5px;
  border-radius: 5px;
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  transition: opacity 0.3s;
  white-space: nowrap;
}

.tooltip:hover::after,
.tooltip:focus::after {
  opacity: 1;
  visibility: visible;
}

.tooltip:focus::after {
  visibility: visible;
}

    </style>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th class="tooltip" data-tooltip="Rank">#</th>
                <% if (data.type === 'team') { %>
                    <th class="tooltip" data-tooltip="Team Name">Name</th>
                    <th class="tooltip" data-tooltip="Points">P</th>
                    <th class="tooltip" data-tooltip="Wins">W</th>
                    <th class="tooltip" data-tooltip="Losses">L</th>
                    <th class="tooltip" data-tooltip="Draws">D</th>
                    <th class="tooltip" data-tooltip="Goals For">GF</th>
                    <th class="tooltip" data-tooltip="Goals Against">GA</th>
                    <th class="tooltip" data-tooltip="GD">GD</th>

                <% } %>
                <% if (data.type === 'individual') { %>
                    <th class="tooltip" data-tooltip="Player Name">Name</th>
                    <th class="tooltip" data-tooltip="Points">P</th>
                    <th class="tooltip" data-tooltip="Goals">G</th>
                    <th class="tooltip" data-tooltip="Assists">A</th>
                    <th class="tooltip" data-tooltip="Own Goals">OG</th>
                <% } %>
                <% if (data.type === 'keeper') { %>
                    <th class="tooltip" data-tooltip="Keeper Name">Name</th>
                    <th class="tooltip" data-tooltip="Weighted Saves">WS</th>
                    <th class="tooltip" data-tooltip="Saves">S</th>
                    <th class="tooltip" data-tooltip="Save Percentage">S%</th>
                <% } %>
                <th class="tooltip" data-tooltip="Games Played">GP</th>
            </tr>
        </thead>
        <tbody>
            <% data.list.forEach(item => { %>
                <tr>
                    <td><%= item.Rank %></td>
                    <% if (data.type === 'team') { %>
                        <td><%= item.shortName %></td>
                        <td><%= item.points %></td>
                        <td><%= item.wins %></td>
                        <td><%= item.losses %></td>
                        <td><%= item.ties %></td>
                        <td><%= item.goalsFor %></td>
                        <td><%= item.goalsAgainst %></td>
                        <td><%= item.goalDifferential %></td>
                    <% } %>
                    <% if (data.type === 'individual') { %>
                        <td><%= item.Player %></td>
                        <td><%= item.points %></td>
                        <td><%= item.goals %></td>
                        <td><%= item.assists %></td>
                        <td><%= item.ownGoals %></td>
                    <% } %>
                    <% if (data.type === 'keeper') { %>
                        <td><%= item.Player %></td>
                        <td><%= item.weightedSaves.toFixed(2) %></td>
                        <td><%= item.saves %></td>
                        <td><%= (item.savePercentage * 100).toFixed(2) %>%</td>
                    <% } %>
                    <td><%= item.gamesPlayed %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
