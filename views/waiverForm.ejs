                            <br>
                            <input type="text" class="allergy-input" name="allergies[]" value="<%= allergy %>" placeholder="Enter an allergy">
                        <% } %>
                    <% } %>
                    <br>
                    <input type="text" class="allergy-input" name="allergies[]" placeholder="Enter an allergy">
                </div>
            </div>
            <div class="section">
                <h3>Medical Conditions</h3>
